source "@sysconfdir@/karoshi/variables.core"

####################
#Refresh client information
####################
IFS=$'\n'
[[ -f /tmp/netlogon/domain_information/print_server ]] && read -r -d $'\0' PRINTSERVER _ < /tmp/netlogon/domain_information/print_server
unset IFS

echo "PRINTSERVER=$PRINTSERVER" > "@sysconfdir@/karoshi/variables.cups"

############################
#Get printers
############################
[[ -d "@localstatedir@/lib/karoshi/cups" ]] || mkdir "@localstatedir@/lib/karoshi/cups"
find "@localstatedir@/lib/karoshi/cups" -mindepth 1 -delete
#Copy printer configuration
if [[ $LOCATION ]] && [[ -f /tmp/netlogon/printers.txt ]]; then
	all_printers=`grep ^$LOCATION, /tmp/netlogon/printers.txt`
	if [[ $all_printers ]]; then
		printer_count=`cut -d, -f2 <<< "$all_printers"`
		default_printer=`cut -d, -f$(( printer_count + 3 )) <<< "$all_printers"`
		echo $default_printer > "@localstatedir@/lib/karoshi/cups/list"
		for (( i = 3; i < printer_count + 3; ++i )); do
			printer=`cut -d, -f$i <<< "$all_printers"`
			echo "Marking printer $printer to be configured"
			if [[ $printer != $default_printer ]]; then
				echo $printer >> "@localstatedir@/lib/karoshi/cups/list"
			fi
			#Copy PPD
			[[ -f /tmp/netlogon/linuxclient/printer_drivers/$printer.ppd ]] && cp -f /tmp/netlogon/linuxclient/printer_drivers/$printer.ppd "@localstatedir@/lib/karoshi/cups/$printer.ppd"
		done
	fi
fi

#Update PPD files
find "@localstatedir@/lib/karoshi/cups" -name '*.ppd' -type f -exec cups-genppdupdate {} +
