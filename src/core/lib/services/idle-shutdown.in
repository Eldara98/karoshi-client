set -e

if [[ -z $XAUTHORITY ]] || [[ -z $DISPLAY ]]; then
	echo "ERROR: XAUTHORITY or DISPLAY not set" >&2
	exit 1
fi

source "@pkgconfdir@/shutdown/variables"

#Ensure value of IDLESHUTDOWNTIME
: ${IDLESHUTDOWNTIME=0}
(( IDLESHUTDOWNTIME < 1 )) && exit 0
(( IDLESHUTDOWNTIME <= 60 )) || IDLESHUTDOWNTIME=60

xautolock -locker "shutdown -h now" -nowlocker "" -time "$IDLESHUTDOWNTIME"
