set -e

karoshi-manage-flags get domainset >/dev/null

source "@pkgconfdir@/variables/core"

#Check if version has been set
if [[ -z $LINUX_VERSION ]]; then
	echo "Linux version not set" >&2
	LINUX_VERSION=notset
fi

#Mount netlogon
mkdir /tmp/netlogon

set +e
mount.cifs //"$PDC"."$DNSSUFFIX"/netlogon /tmp/netlogon -o guest 1>/dev/null
mount_ret=$?
set -e

if (( mount_ret != 0 )); then
	echo "Error connecting to $PDC.$DNSSUFFIX - offline mode enabled" >&2
	trap "{ rmdir /tmp/netlogon }" EXIT
	karoshi-manage-flags set offline_mode
else
	trap "{ umount /tmp/netlogon; rmdir /tmp/netlogon }" EXIT
	karoshi-manage-flags unset offline_mode
fi

#Run update scripts
while IFS= read -rd $'\0' file; do
	source "$file"
done < <(find "@pkglibexecdir@/update" -type f -print0 | sort -z)
