if $is_domain; then
	if mountpoint -q ~/network/home; then
		alternate_home="network/home"
	fi

	#Clear Trash folder
	[[ -d ~/.local/share/Trash ]] && rm -rf ~/.local/share/Trash

	#Remove Karoshi autostart files
	find ~/.config/autostart -name 'karoshi-*.desktop' -delete
fi
