set -e

[[ -d "@pkgstatedir@/offline" ]]

if [[ ! $PAM_USER ]]; then
	echo "ERROR: Must be run through pam_exec.so" >&2
	exit $PAM_CRED_UNAVAIL
fi
#Make sure the user exists
if ! getent passwd "$PAM_USER" >/dev/null; then
	echo "ERROR: Must be run with a valid PAM_USER" >&2
	exit $PAM_USER_UNKNOWN
fi

user_info=$(getent passwd "$PAM_USER")
user_uid=$(cut -d":" -f3 <<< "$user_info")
user_gid=$(cut -d":" -f4 <<< "$user_info")
user_home=$(cut -d":" -f6 <<< "$user_info")

#Check for required directories
if [[ ! -d "@pkgstatedir@/offline/users" ]]; then
	echo "@pkgstatedir@/offline/users did not exist - creating"
	mkdir "@pkgstatedir@/offline/users" -m 0755
fi
if [[ ! -d "@pkgstatedir@/offline/flags" ]]; then
	echo "@pkgstatedir@/offline/flags did not exist - creating"
	mkdir "@pkgstatedir@/offline/flags" -m 0711
fi

if ! [[ $user_uid -ge 1000 ]]; then
	exit $PAM_IGNORE
fi

if karoshi-manage-flags get offline_mode >/dev/null; then
	if [[ ! -d "@pkgstatedir@/offline/users/$PAM_USER" ]]; then
		echo "Creating offline home directory for $PAM_USER"
		mkdir "@pkgstatedir@/offline/users/$PAM_USER" -m 0700
		chown $user_uid:$user_gid "@pkgstatedir@/offline/users/$PAM_USER"
	fi
	touch "@pkgstatedir@/offline/flags/$PAM_USER"
	chown $user_uid:$user_gid "@pkgstatedir@/offline/flags/$PAM_USER"
	chmod 0600 "@pkgstatedir@/offline/flags/$PAM_USER"
else
	if [[ -f "@pkgstatedir@/offline/flags/$PAM_USER" ]] && [[ $(< "@pkgstatedir@/offline/flags/$PAM_USER") == "delete" ]]; then
		#Remove offline home directory
		echo "Detected stale offline home directory - removing"
		rm -rf "@pkgstatedir@/offline/users/$PAM_USER"
		rm -rf "@pkgstatedir@/offline/flags/$PAM_USER"
	fi
fi
