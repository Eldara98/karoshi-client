#Populate list with all hidden folders, with some exceptions
while read -d $'\0' -r file ; do
	configuration_list+=( "${file##~/}" )
done < <(find ~ -mindepth 1 -maxdepth 1 -xdev -not '(' -name '.cache' \
			-o -name '.thumbnails' -o -name '.Xauthority' -o -name '.ICEauthority' \
			-o -name '.xsession-errors' -o -name '.pulse*' \
			-o -name '.gvfs' -o -name '.dbus' ')' -name '.*' -print0)

while read -d $'\0' -r file ; do
	desktop_list+=( "${file##~/}" )
done < <(find ~/Desktop -mindepth 1 -maxdepth 1 -not -name "karoshi-*.desktop" -and -size -1024c -print0)
