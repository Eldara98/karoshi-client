#!/bin/bash

function sendXNotifications {
	while read DISPLAY; do
		export DISPLAY
		if ! xhost; then
			#We don't have permission yet
			export XAUTHORITY=`ps aux | grep -- ' -auth ' | grep -- " $DISPLAY" | sed 's/.*-auth \([^ ]*\).*/\1/'`
			if ! xhost; then continue; fi #We STILL don't have any permission, so just ignore
		fi
		#At this point we should have permission to write to the display
		notify-send -u critical "Scheduled Shutdown" "This system is going down in $1 minute/s\nMake sure to save your work!" -i /opt/karoshi/linuxclientsetup/images/smalllogo.xpm
		#Reset variables
		unset DISPLAY
		unset XAUTHORITY
	done < <(grep -hz "^DISPLAY=" /proc/*/environ | tr \\0 \\n | sed 's/^DISPLAY=\([^\.]*\).*/\1/' | sort -u)
}

#start shutdown sequence
shutdown -h +5 &

#send 5 minute notification
sendXNotifications 5
#wait for 4 minutes
sleep 240
#send 1 minute notification
sendXNotifications 1
