#Mark files for saving
if which thunderbird >/dev/null && [[ -d ~/.thunderbird ]]; then
	thunderbird_profile=$(sed -n '0,/^Path=/s/^Path=//p' ~/.thunderbird/profiles.ini)

	#Remove .thunderbird from configuration_list
	temp_list=()
	for dir in "${configuration_list[@]}"; do
		if [[ $dir != */.thunderbird ]]; then
			temp_list+=( "$dir" )
		fi
	done
	configuration_list=( "${temp_list[@]}" )

	if [[ $thunderbird_profile ]] && [[ -d ~/.thunderbird/$thunderbird_profile ]]; then
		configuration_list+=( ".thunderbird/$thunderbird_profile/places.sqlite" )
	fi
fi

